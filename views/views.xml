<odoo>

    <record id="view_partner_form_commission" model="ir.ui.view">
        <field name="name">res.partner.form.commission</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='category_id']" position="after">
                <field name="is_commissioner"/>
            </xpath>
        </field>
    </record>

     <record id="product_normal_form_view" model="ir.ui.view">
        <field name="name">product.product.view.form.inherit.commission</field>
        <field name="model">product.product</field>
        <field name="inherit_id" ref="product.product_normal_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//label[@for='purchase_ok']"
                   position="after">
                <field name="is_commissioned"/>
                <label for="is_commissioned"/>
                <field name="is_commissioner"/>
                <label for="is_commissioner"/>
                <field name="commission_percentage"/>
                <label for="commission_percentage"/>   
            </xpath>
        </field>
    </record>

    <record id="product_template_only_form_view" model="ir.ui.view">
        <field name="name">product.template.only.form.view.inherit.commission</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_only_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='barcode']"
                   position="after">
                <field name="is_commissioned"/>
                <label for="is_commissioned"/>
                <field name="is_commissioner"/>
                <label for="is_commissioner"/>
                <field name="commission_percentage"/>
                <label for="commission_percentage"/>   
            </xpath>
        </field>
    </record>
    
    <record id="view_picking_form" model="ir.ui.view">
        <field name="name">stock.picking.view.form.inherit.commission</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='picking_type_id']"
                   position="after">
                <field name="is_commission"/>
                <label for="is_commission"/>
            </xpath>
        </field>
    </record>

    <!--    Sale order inherited to add the custom field-->
    <record id="view_order_form" model="ir.ui.view">
        <field name="name">sale.order.view.form.inherit.sale.commission</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='sale_order_template_id']" position="after">
                <field name="commissioner_id"/>
            </xpath>
        </field>
    </record>

    <!--    Purchase order inherited to add the custom field-->
    <record id="purchase_order_form" model="ir.ui.view">
        <field name="name">purchase.order.view.form.inherit.purchase.commission</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='partner_id']" position="after">
                <field name="commissioner_id"/>
                <field name="is_commissioned"/>
            </xpath>
        </field>
    </record>

</odoo>
